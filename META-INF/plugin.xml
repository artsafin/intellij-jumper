<idea-plugin version="2">
  <name>Jumper</name>
  <description>short description of the plugin</description>
  <version>1.0</version>
  <vendor>YourCompany</vendor>

  <!-- please see http://confluence.jetbrains.net/display/IDEADEV/Build+Number+Ranges for description -->
  <idea-version since-build="107.105"/>

  <application-components>
    <!-- Add your application components here -->
  </application-components>

  <project-components>
    <!-- Add your project components here -->
  </project-components>

  <actions>
    <!-- Add your actions here -->
      <action id="JumpToNextCharacter" class="JumpToNextCharacterAction" text="JumpToNextCharacter" description="JumpToNextCharacter">
          <add-to-group group-id="ToolsMenu" anchor="last"/>
          <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt RIGHT"/>
      </action>
      <action id="JumpToPrevCharacterAction" class="JumpToPrevCharacterAction" text="JumpToPrevCharacterAction"
              description="JumpToPrevCharacterAction">
          <add-to-group group-id="ToolsMenu" anchor="last"/>
          <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt LEFT"/>
      </action>
  </actions>

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
  </extensions>
</idea-plugin>